{
  "name": "react-native-ble-plx-sandbox",
  "scripts": {
    "android": "cd app && npm run android",
    "ci": "npm run ci:capture && npm run test:app",
    "ci:capture": "cd capture && npm run ci",
    "install:app": "cd app && npm install",
    "install:capture": "cd capture && npm install",
    "postinstall": "npm run install:capture && npm run install:app && npm run sync",
    "start": "cd app && npm start",
    "sync": "npm run sync:shared:app && npm run sync:shared:capture",
    "sync:shared:app": "bash -c \"mkdir -p app/src/shared && cp -ru shared/* app/src/shared\"",
    "sync:shared:capture": "bash -c \"mkdir -p capture/src/shared && cp -ru shared/* capture/src/shared\"",
    "test": "npm run sync && npm run test:capture && npm run test:app",
    "test:app": "cd app && npm test",
    "test:capture": "cd capture && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsthorup/react-native-ble-plx-sandbox.git"
  },
  "author": "Lars Thorup <lars@zealake.com> (https://www.zealake.com/)",
  "license": "MIT"
}
